@model CAPS.ViewModels.LoanDetailsViewModel

@{
    ViewData["Title"] = "Loan Details";
}

<h2>@ViewData["Title"]</h2>

<div class="loan-details">
    <div class="form-group">
        <label><strong>Loan Amount:</strong></label>
        <p>@Model.Amount.ToString("C")</p>
    </div>
    <div class="form-group">
        <label><strong>Loan Term (Months):</strong></label>
        <p>@Model.LoanTerm</p>
    </div>
    <div class="form-group">
        <label><strong>Issued Date:</strong></label>
        <p>@Model.IssuedDate.ToString("d")</p>
    </div>
    <div class="form-group">
        <label><strong>Due Date:</strong></label>
        <p>@Model.DueDate.ToString("d")</p>
    </div>
    <div class="form-group">
        <label><strong>Loan Status:</strong></label>
        <p>@Model.LoanStatus</p>
    </div>
</div>

<div>
    <a href="@Url.Action("Index", "Home")" class="btn btn-secondary">Back to Home</a>
</div>