@model CAPS.ViewModels.TakeLoanViewModel

@{
    ViewData["Title"] = "Take Loan";
}

<h2 class="page-title">Take a Loan</h2>

<form method="post" asp-action="TakeLoan" class="loan-form">
    <div class="form-group">
        <label for="loanAmount">Loan Amount</label>
        <input type="number" name="loanAmount" id="loanAmount" class="form-control" required min="1" value="@Model.Amount" />
        <span asp-validation-for="Amount" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="loanTerm">Loan Term (Months)</label>
        <input type="number" name="loanTerm" id="loanTerm" class="form-control" required min="1" value="@Model.LoanTerm" />
        <span asp-validation-for="LoanTerm" class="text-danger"></span>
    </div>

    <div class="form-actions">
        <button type="submit" class="btn btn-primary">Submit Loan Request</button>
        <a href="@Url.Action("Index", "Home")" class="btn btn-secondary">Cancel</a>
    </div>
</form>

