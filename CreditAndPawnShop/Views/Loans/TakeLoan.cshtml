@model CAPS.ViewModels.TakeLoanViewModel

<h2>Take a Loan</h2>

<form method="post" asp-action="TakeLoan">
    <div class="form-group">
        <label for="Amount">Loan Amount</label>
        <input type="number" asp-for="Amount" class="form-control" />
        <span asp-validation-for="Amount"></span>
    </div>

    <div class="form-group">
        <label for="LoanTerm">Loan Term (Months)</label>
        <input type="number" asp-for="LoanTerm" class="form-control" />
        <span asp-validation-for="LoanTerm"></span>
    </div>

    <button type="submit" class="btn btn-primary">Request Loan</button>
</form>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}