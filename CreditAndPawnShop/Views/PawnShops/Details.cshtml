@using CAPS.ViewModels
@model CAPS.ViewModels.PawnShopsViewModel

@{
    ViewData["Title"] = $"{Model.Name} - {Model.City}";
}

<div class="container my-5">
    <!-- Title Section -->
    <h1 class="text-center text-success mb-4">@Model.Name - @Model.City</h1>

    <h3 class="text-center text-success mb-4">Pawned Items</h3>

    <!-- Pawned Items Table -->
    <table class="table table-striped table-bordered table-hover shadow-sm">
        <thead class="bg-success text-white">
            <tr>
                <th>Item Name</th>
                <th>Description</th>
                <th>Category</th>  
                <th>Value</th>
               
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.PawnedItems)
            {
                <tr>
                    <td>@item.ItemName</td>
                    <td>@item.Description</td>
                    <td>@item.Category</td>
                    <td>@item.Value</td>
                    
                    
                </tr>
            }
        </tbody>
    </table>

    <!-- Back Button -->
    <div class="text-center mt-4">
        <a href="@Url.Action("Index", "PawnShops")" class="btn btn-outline-success btn-lg" role="button">
            Back to List
        </a>
    </div>
</div>

@section Styles {
    <style>
        /* Hover effects for links and table rows */
        .table-hover tbody tr:hover {
            background-color: #e6f9e6;
        }

        .btn-outline-success {
            color: #28a745;
            border-color: #28a745;
        }

            .btn-outline-success:hover {
                background-color: #28a745;
                color: white;
            }

        /* Centering the container and adding spacing */
        .container {
            padding: 0 15px;
        }

        .table {
            background-color: #f8f9fa;
        }

        .table-striped tbody tr:nth-of-type(odd) {
            background-color: #f1f1f1;
        }

        /* Table headers background and text color */
        .table thead th {
            background-color: #28a745;
            color: white;
        }

        /* Title and header custom styles */
        h1, h3 {
            color: #28a745;
        }
    </style>
}
