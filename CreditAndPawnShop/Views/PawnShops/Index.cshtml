@model IEnumerable<CAPS.ViewModels.PawnShopsViewModel>

@{
    ViewData["Title"] = "Pawn Shops";
}

<h1 class="text-center text-primary">@ViewData["Title"]</h1>

<div class="table-container">
    <table class="table table-striped table-bordered table-hover table-responsive shadow-lg">
        <thead class="table-dark">
            <tr>
                <th>Name</th>
                <th>City</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var pawnShop in Model)
            {
                <tr>
                    <td>@pawnShop.Name</td>
                    <td>@pawnShop.City</td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Styles
{
    <style>
        .table-container {
            margin-top: 20px;
            margin-bottom: 20px;
        }

        .table th, .table td {
            vertical-align: middle;
            text-align: center;
        }

        .table td {
            font-size: 16px;
        }

        .table-hover tbody tr:hover {
            background-color: #f0f8ff; 
        }

        h1 {
            font-family: 'Arial', sans-serif;
            font-weight: bold;
        }

        .table-striped tbody tr:nth-of-type(odd) {
            background-color: #f9f9f9; 
        }

        .table-striped tbody tr:nth-of-type(even) {
            background-color: #fff; 
        }

        .table td, .table th {
            padding: 12px; 
        }
    </style>
}